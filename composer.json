{
    "name": "agoat/contentblocks-bundle",
    "type": "contao-bundle",
    "description": "Contao content blocks extension",
    "license": "LGPL-3.0+",
    "authors": [
        {
            "name": "Arne Stappen",
            "homepage": "https://github.com/agoat"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "symfony/framework-bundle": "~2.8|~3.0",
        "contao/core-bundle": "^4.2"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.5"
    },
    "replace": {
        "contao-legacy/contentblocks": "*"
    },
    "autoload": {
        "psr-4": {
            "Agoat\\ContentBlocksBundle\\": "src/"
        },
        "classmap": [
            "src/Resources/contao"
        ],
        "exclude-from-classmap": [
            "src/Resources/contao/config",
            "src/Resources/contao/dca",
            "src/Resources/contao/languages",
            "src/Resources/contao/templates",
            "../../contao/core-bundle/src/Resources/contao/widgets/FileSelector.php",
            "../../contao/core-bundle/src/Resources/contao/widgets/FileTree.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Agoat\\ContentBlocksBundle\\Test\\": "tests/"
        }
    }
}
